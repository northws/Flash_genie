# =============================================================================
# Stage 1 Sampling Configuration - Factorized Features
# =============================================================================
# Stage: 1
# Max Length: L=512-768
# Memory Saving: 500x (pair features)
# Use Case: Moderate length protein generation
# =============================================================================

# Basic Sampling Settings
name stage1_sampling
seed 42
targetLength 512
numSamples 100
batchSize 2

# Model Checkpoint
checkpointPath weights/stage1_model.ckpt

# Sampling Strategy
samplingStrategy ddim           # DDIM for faster sampling
numDiffusionSteps 1000
skipSteps 50                   # Skip to 950 steps for speed

# Noise Schedule
noiseSchedule cosine
startBeta 1e-5
endBeta 0.02

# Temperature & Guidance
temperature 1.0
guidanceScale 1.0

# *** STAGE 1 FEATURE ***
useFactorizedPairs True
zFactorRank 2
pairFactorDim 64

# Output Settings
outputDir samples/stage1
savePDB True
saveTrajectory False
saveMetrics True

# Hardware Settings
device cuda:0
precision 32

# Stage Features
useSparseKNN False
useAxialAttention False
