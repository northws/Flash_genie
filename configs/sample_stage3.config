# =============================================================================
# Stage 3 Sampling Configuration - Fast Generation
# =============================================================================
# Stage: 1 + 2 + 3
# Max Length: L=1024-1536
# Speed: 2-3x faster with FP16
# Use Case: Efficient long protein generation
# =============================================================================

# Basic Sampling Settings
name stage3_fast_sampling
seed 42
targetLength 1024
numSamples 50
batchSize 1

# Model Checkpoint
checkpointPath weights/stage3_model.ckpt

# Sampling Strategy
samplingStrategy ddim
numDiffusionSteps 1000
skipSteps 100                  # Skip to 900 steps

# Noise Schedule
noiseSchedule cosine
startBeta 1e-5
endBeta 0.02

# Temperature & Guidance
temperature 0.95               # Slightly lower for stability
guidanceScale 1.0

# *** STAGE 1-3 FEATURES ***
useFactorizedPairs True
zFactorRank 2
pairFactorDim 64

useFactorizedTriangleOps True
triangleUpdateRank 4

useMixedPrecision True
precision 16                   # FP16 for speed

# Output Settings
outputDir samples/stage3
savePDB False
saveTrajectory False
saveMetrics True

# Hardware Settings
device cuda:0

# Stage Features
useSparseKNN False
useAxialAttention False
