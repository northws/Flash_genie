# =============================================================================
# Baseline Sampling Configuration
# =============================================================================
# Stage: Baseline
# Max Length: L=256-384
# Use Case: Standard protein generation
# =============================================================================

# Basic Sampling Settings
name baseline_sampling
seed 42
targetLength 256
numSamples 100
batchSize 4

# Model Checkpoint
checkpointPath weights/baseline_model.ckpt

# Sampling Strategy
samplingStrategy ddpm           # Standard DDPM sampling
numDiffusionSteps 1000         # Full denoising schedule
skipSteps 0                    # No step skipping

# Noise Schedule
noiseSchedule cosine
startBeta 1e-5
endBeta 0.02

# Temperature & Guidance
temperature 1.0                 # Standard temperature
guidanceScale 1.0               # No guidance

# Output Settings
outputDir samples/baseline
savePDB True
saveTrajectory False           # Don't save intermediate steps
saveMetrics True

# Hardware Settings
device cuda:0
precision 32

# Stage Features
useFactorizedPairs False
useSparseKNN False
useAxialAttention False
